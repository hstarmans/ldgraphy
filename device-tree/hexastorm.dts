/dts-v1/;
/plugin/;

/ {
	compatible = "ti,beaglebone", "ti,beaglebone-black", "ti,beaglebone-green";

	/* identification */
	part-number = "firestarter";
	version = "0.2";
        exclusive-use =
	        "P8.11",        // y-enable
		"P8.12",        // y-step
		"P8.13",        // fan-pwm
		"P8.14",        // SPIO_CSZ
		"P8.15",        // y-dir
		"P8.16",        // z-step
		"P8.17",        // z-dir
		"P8.18",        // z-enable
		"P8.19",        // spindle-pwm

		"P9.11",        // spio-csy
		"P9.12",        // x-enable
		"P9.14",        // y-po
		"P9.15",        // x-po
		"P9.16",        // z-po
		"P9.17",        // spi0-cs0 = spi0_csx
		"P9.18",        // spi0-di
		"P9.19",        // i2c2_scl
		"P9.20",        // i2c2_sda
		"P9.21",        // spi0-do
		"P9.22",        // spi0-scl
		"P9.23",        // poly-en
		"P9.24",	// ph-diode
		"P9.25",        // ic-hb-pwm1
		"P9.26",	// poly-ready
		"P9.27",        // ic-hb-pwm2
		"P9.30",        // poly-pwm
		"P9.41",        // x-step
		"P9.42";        // x-dir

	fragment@0 {
		target = <&am33xx_pinmux>;
		__overlay__ {
			spi0_pins_s0: spi0_pins_s0{
				pinctrl-single,pins = <
					0x150 0x30  /* spi0_sclk            */
					0x154 0x30  /* spi0_d0              */
					0x158 0x10  /* spi0_d1              */
					0x15c 0x10  /* spi0_cs0             */
				>;
			};
			pinctrl_test: pinctrl_test_0_pins {
				pinctrl-single,pins = <
				        0x034 0x07  /* P8_11 Y-enable       */
					0x030 0x06  /* P8_12 Y-step         */
					0x024 0x04  /* P8_13 FAN_PWM        */
					0x028 0x07  /* P8_14 SPIO_CSZ       */
					0x03c 0x07  /* P8_15 Y-dir          */
					0x038 0x07  /* P8_16 Z-step         */
					0x02c 0x07  /* P8_17 Z-dir          */
					0x08c 0x07  /* P8_18 Z_enable       */
					0x020 0x04  /* P8_19 SPINDLE_PWM    */
				        0x070 0x07  /* P9_11 spio-csy       */
                                        0x078 0x07  /* P9_12 X-enable       */
                                        0x048 0x27  /* P9_14 y-po           */
					0x040 0x27  /* P9_15 X-po           */
					0x04c 0x27  /* P9_16 z-po           */
					0x044 0x07  /* P9_23 poly_en        */
					0x184 0x26  /* P9_24 ph-diode       */
					0x1ac 0x05  /* P9_25 ic-hb-pwm1     */
					0x180 0x07  /* P9_26 poly-ready     */
					0x1a4 0x05  /* P9_27 ic-hb-pwm2     */
					0x198 0x05  /* P9_30 poly-pwm       */
				        0x1a8 0x05  /* P9_41 x-step         */
					0x1a0 0x05  /* P9_42 x-dir          */
				>;
			};
		};
	};

	fragment@1 {
		target = <&ocp>;
		__overlay__ {
		        
			test_helper: helper {
				compatible = "bone-pinmux-helper";
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_test>;
				status = "okay";
			};
		};

	};

	fragment@2 {
		target = <&spi0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			status = "okay";
			pinctrl-names = "default";
			pinctrl-0 = <&spi0_pins_s0>;

			spidev@0{
				spi-max-frequency = <24000000>;
				reg = <0>;
				compatible = "linux,spidev";
			};

		};
	};	
};
